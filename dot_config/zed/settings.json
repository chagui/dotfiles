{
  "vim_mode": true,
  "base_keymap": "JetBrains",
  "icon_theme": {
    "mode": "system",
    "light": "Zed (Default)",
    "dark": "Zed (Default)"
  },
  "ui_font_size": 16,
  "buffer_font_size": 15,
  "theme": {
    "mode": "system",
    "light": "Ayu Light",
    "dark": "Ayu Dark"
  },
  "context_servers": {
    "atlassian": {
      "source": "custom",
      "enabled": true,
      "command": "npx",
      "args": [
        "-y",
        "mcp-remote",
        "https://mcp.atlassian.com/v1/sse"
      ]
    },
    "github": {
      "source": "custom",
      "enabled": true,
      "command": "$HOME/.local/bin/github_mcp.sh",
      "args": []
    }
  }
}
